    <model-viewer 
      id="viewer"
      src="Wolfsonian_wrestler_model.glb"
      alt="A 3D scan of Wrestler sculpture" 
      orientation="0deg 0deg 45deg"
      auto-rotate camera-controls 
      shadow-intensity="2" 
      shadow-softness="0"
      exposure="0.7" 
      tone-mapping="aces"
      environment-image="legacy"
      ar ar-modes="webxr scene-viewer quick-look"
      ar-scale="fixed">
      <button slot="ar-button" style="display: none;"></button>
    </model-viewer>

    <div id="info-modal" class="modal-overlay" onclick="closeModal('info-modal')">
        <div class="modal-content" onclick="event.stopPropagation()">
            <div class="modal-header">
                <h2 class="modal-title">About the Object</h2>
                <span class="close-btn" onclick="closeModal('info-modal')">&times;</span>
            </div>
            
            <div class="section-title">Artistic Style</div>
            <p class="modal-text">
                The artist Dudley Talcott appropriated a recognizable semi-classical form and superimposed a machine-like veneer, with hands resembling tools, exaggerated and stylized musculature, and a featureless visage.
                <br><br>
                Fabricating the massive form in cast aluminum, a newly accessible and favored Art Deco building material at the time, he further associated the Wrestler with a new modern aspect.
            </p>
            
            <div class="section-title">Exhibition History</div>
            <p class="modal-text">
                The Wrestler was exhibited in 1930 at The Museum of Modern Art and then at the 10th Olympic Games in Los Angeles in 1932. 
                <br><br>
                Until 1948, art competitions were a part of the modern Olympic Games, wherein medals were awarded for works inspired by sport. Thirty-one nations participated in the 1932 Olympic art exhibition held at the Los Angeles Art Museum. 
                <br><br>
                Talcott received an Honorable Mention. The gold medal went to Mahonri Young, an important New York social realist sculptor (and grandson of Brigham Young).
            </p>
        </div>
    </div>

    <div id="qr-modal-overlay" class="modal-overlay" onclick="closeModal('qr-modal-overlay')">
        <div class="modal-content" style="max-width: 350px; text-align: center;" onclick="event.stopPropagation()">
            <div class="modal-header" style="justify-content: flex-end;">
                 <span class="close-btn" onclick="closeModal('qr-modal-overlay')">&times;</span>
            </div>
            <h2 style="margin-top:0;">View in your space</h2>
            <p class="qr-text">Scan this code with your phone camera to view the Wrestler in AR.</p>
            <img id="qr-image" class="qr-image" src="" alt="QR Code" />
        </div>
    </div>

    <script>
        // MODAL
        function openModal(id) { document.getElementById(id).style.display = "flex"; }
        function closeModal(id) { document.getElementById(id).style.display = "none"; }

        // AUTO ROTATION TOGGLE
        function toggleRotation() {
            const viewer = document.getElementById("viewer");
            const btn = document.getElementById("rotate-btn");
            
            if (viewer.hasAttribute("auto-rotate")) {
                viewer.removeAttribute("auto-rotate");
                btn.innerHTML = `<svg viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>`;
            } else {
                viewer.setAttribute("auto-rotate", "");
                btn.innerHTML = `<svg viewBox="0 0 24 24"><path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/></svg>`;
            }
        }

        // FULL SCREEN
        const iconExpand = `<svg viewBox="0 0 24 24"><path d="M7 14H5v5h5v-2H7v-3zm-2-4h2V7h3V5H5v5zm12 7h-3v2h5v-5h-2v3zM14 5v2h3v3h2V5h-5z"/></svg>`;
        const iconCompress = `<svg viewBox="0 0 24 24"><path d="M5 16h3v3h2v-5H5v2zm3-8H5v2h5V5H8v3zm6 11h2v-3h3v-2h-5v5zm2-11V5h-2v5h5V8h-3z"/></svg>`;

        function toggleFullScreen() {
            const btn = document.getElementById("fullscreen-btn");
            
            // Check if class exists
            if (!document.body.classList.contains("fullscreen-active")) {
                document.body.classList.add("fullscreen-active");
                btn.innerHTML = iconCompress;
                if (document.documentElement.requestFullscreen) {
                    document.documentElement.requestFullscreen().catch(() => {});
                }
            } else {
                document.body.classList.remove("fullscreen-active");
                btn.innerHTML = iconExpand;
                if (document.exitFullscreen) {
                    document.exitFullscreen().catch(() => {});
                }
            }
        }

        // Handle Escape Key or Exit
        document.addEventListener("fullscreenchange", () => {
            const btn = document.getElementById("fullscreen-btn");
            if (!document.fullscreenElement) {
                document.body.classList.remove("fullscreen-active");
                btn.innerHTML = iconExpand;
            }
        });

        // SMART AR
        function handleAR() {
            const viewer = document.querySelector('model-viewer');
            const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
            if (isMobile) {
                viewer.activateAR();
            } else {
                const currentURL = window.location.href;
                const qrUrl = `https://api.qrserver.com/v1/create-qr-code/?size=300x300&data=${encodeURIComponent(currentURL)}`;
                document.getElementById('qr-image').src = qrUrl;
                openModal('qr-modal-overlay');
            }
        }

        // LIGHTING
        let lightStep = 0;
        function toggleLighting() {
            const viewer = document.querySelector('model-viewer');
            lightStep = (lightStep + 1) % 3;
            if (lightStep === 0) { viewer.exposure = 0.7; viewer.shadowIntensity = 2; }
            else if (lightStep === 1) { viewer.exposure = 1.2; viewer.shadowIntensity = 0.5; }
            else { viewer.exposure = 0.5; viewer.shadowIntensity = 4; }
        }

        // POSTCARD
        async function capturePostcard() {
            const viewer = document.querySelector('model-viewer');
            const blob = await viewer.toBlob({ mimeType: 'image/jpeg', qualityArgument: 1 });
            const url = URL.createObjectURL(blob);
            const img = new Image();
            img.onload = () => {
                const canvas = document.createElement('canvas');
                const ctx = canvas.getContext('2d');
                canvas.width = img.width; canvas.height = img.height;
                ctx.drawImage(img, 0, 0);
                
                // White Bar
                const barHeight = canvas.height * 0.12;
                const barY = canvas.height - barHeight;
                ctx.fillStyle = "white";
                ctx.fillRect(0, barY, canvas.width, barHeight);
                
                // Text
                ctx.fillStyle = "#1a1a1a";
                const fontSize = canvas.height * 0.035;
                const padding = canvas.width * 0.05;
                const textY = barY + (barHeight * 0.4);
                
                // Left
                ctx.font = `bold ${fontSize}px serif`;
                ctx.textAlign = "left";
                ctx.fillText("Wrestler", padding, textY);
                ctx.font = `normal ${fontSize * 0.6}px sans-serif`;
                ctx.fillStyle = "#555";
                ctx.fillText("Dudley Vaill Talcott, 1929", padding, textY + (fontSize * 1.2));
                
                // Right
                ctx.font = `bold ${fontSize * 0.7}px serif`;
                ctx.fillStyle = "#1a1a1a";
                ctx.textAlign = "right";
                ctx.fillText("The Wolfsonian–FIU", canvas.width - padding, barY + (barHeight/2) + (fontSize * 0.2));

                const link = document.createElement('a');
                link.download = 'Wolfsonian_Wrestler_Postcard.jpg';
                link.href = canvas.toDataURL('image/jpeg', 0.9);
                link.click();
            };
            img.src = url;
        }
    </script>

</body>
</html>



